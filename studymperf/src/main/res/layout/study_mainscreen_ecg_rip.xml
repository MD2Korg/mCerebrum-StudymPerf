<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backGroundDark"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight=".3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Study Name: mPerf"
                android:textColor="#ffff"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight=".7">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="#ffff"
                android:padding="12dp" />
        </LinearLayout>




    </LinearLayout>

    <!-- Study buttons
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".25"
                android:id="@+id/btn_fitness"
                android:layout_width="@dimen/study_button_sizew"
                android:layout_height="@dimen/study_button_sizeh"
                android:layout_marginTop="10dp"
                android:background="@color/backGroundDark"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="1sp"
                fancy:fb_textColor="#fff"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:text="Fitness"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:src="@drawable/fitness"
                        android:layout_weight="0.75"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".25"
                android:id="@+id/btn_productivity"
                android:layout_width="@dimen/study_button_sizew"
                android:layout_height="@dimen/study_button_sizeh"
                android:layout_marginTop="10dp"
                android:background="@color/backGroundDark"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="1sp"
                fancy:fb_textColor="#fff"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight=".25"
                        android:text="Productivity"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_height"
                        android:src="@drawable/productivity"
                        android:layout_weight="0.75"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>

    </LinearLayout>
    <!-- Data Quality bar starts
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/backGroundDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensor Data Quality"
            android:textColor="#ffff"
            android:textSize="12dp"
            android:padding="8dp"
            android:textAlignment="center"/>
    </LinearLayout>


    <!-- Data Quality bar ends
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight=".25"
            android:id="@+id/btn_dq_left_wrist"
            android:layout_width="@dimen/study_dq_size"
            android:layout_height="@dimen/study_dq_size"
            android:layout_marginTop="10dp"
            android:background="@color/backGroundDark"
            fancy:fb_defaultColor="@color/backGroundDark"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            fancy:fb_text=""
            fancy:fb_textSize="8sp"
            fancy:fb_textColor="#fff">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Left wrist"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_weight=".25"
                    />
                <ImageView
                    android:layout_width="@dimen/icon_dq_width"
                    android:layout_height="@dimen/icon_dq_height"
                    android:src="@drawable/data_quality_good"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"/>/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Good"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_gravity="center"
                    android:layout_weight=".25"/>
            </LinearLayout>

        </mehdi.sakout.fancybuttons.FancyButton>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight=".25"
            android:id="@+id/btn_dq_right_wrist"
            android:layout_width="@dimen/study_dq_size"
            android:layout_height="@dimen/study_dq_size"
            android:layout_marginTop="10dp"
            android:background="@color/backGroundDark"
            android:layout_marginLeft="10dp"
            fancy:fb_defaultColor="@color/backGroundDark"
            android:padding="10dp"
            fancy:fb_text=""
            fancy:fb_textSize="9sp"
            fancy:fb_textColor="#fff" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Right wrist"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_weight=".25"
                    />
                <ImageView
                    android:layout_width="@dimen/icon_dq_width"
                    android:layout_height="@dimen/icon_dq_height"
                    android:src="@drawable/data_quality_bad"
                    android:layout_weight="0.50"
                    android:layout_gravity="center"/>/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Poor"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_gravity="center"
                    android:layout_weight=".25"/>
            </LinearLayout>
        </mehdi.sakout.fancybuttons.FancyButton>



        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight=".25"
            android:id="@+id/btn_dq_ecg"
            android:layout_width= "@dimen/study_dq_size"
            android:layout_height="@dimen/study_dq_size"
            android:layout_marginTop="10dp"
            android:background="@color/backGroundDark"
            android:layout_marginLeft="10dp"
            fancy:fb_defaultColor="@color/backGroundDark"
            android:padding="10dp"


            fancy:fb_text=""
            fancy:fb_textSize="12sp"
            fancy:fb_textColor="#fff">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Heart Rate"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_weight=".25"
                    />
                <ImageView
                    android:layout_width="@dimen/icon_dq_width"
                    android:layout_height="@dimen/icon_dq_height"
                    android:src="@drawable/no_data"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"/>/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "No data"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_gravity="center"
                    android:layout_weight=".25"/>
            </LinearLayout>
        </mehdi.sakout.fancybuttons.FancyButton>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_weight=".25"
            android:id="@+id/btn_dq_respiration"
            android:layout_width="@dimen/study_dq_size"
            android:layout_height="@dimen/study_dq_size"
            android:layout_marginTop="10dp"
            android:background="@color/backGroundDark"
            android:layout_marginLeft="10dp"
            fancy:fb_defaultColor="@color/backGroundDark"
            android:padding="10dp"
            fancy:fb_text=""
            fancy:fb_textSize="12sp"
            fancy:fb_textColor="#fff">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Breath"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_weight=".25"
                    />
                <ImageView
                    android:layout_width="@dimen/icon_dq_width"
                    android:layout_height="@dimen/icon_dq_height"
                    android:src="@drawable/data_quality_good"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"/>/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Good"
                    android:textSize="10sp"
                    android:textColor="#FFFF"
                    android:layout_gravity="center"
                    android:layout_weight=".25"/>
            </LinearLayout>
        </mehdi.sakout.fancybuttons.FancyButton>

    </LinearLayout>

    <!-- Privacy & Report
    -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_privacy"
            android:layout_width="@dimen/privacy_report_button_w"
            android:layout_height="@dimen/privacy_report_button_h"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:background="@color/backGroundDark"
            android:weightSum="1"
            fancy:fb_defaultColor="@color/backGroundDark"
            fancy:fb_text=""
            fancy:fb_textColor="#fff"
            fancy:fb_textSize="1sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center_horizontal"
                    android:text="Data Collection"
                    android:textColor="#ffff"
                    android:textSize="@dimen/study_btn_font_size" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"

                    android:layout_gravity="center"
                    android:text="Resumed after 00:10:00"
                    android:textAlignment="center"
                    android:textColor="@color/headerLemon"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="50dp"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </LinearLayout>

        </mehdi.sakout.fancybuttons.FancyButton>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_view_report"
            android:layout_width="@dimen/privacy_report_button_w"
            android:layout_height="@dimen/privacy_report_button_h"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:background="@color/backGroundDark"
            android:weightSum="1"
            fancy:fb_defaultColor="@color/backGroundDark"
            fancy:fb_text=""
            fancy:fb_textColor="#fff"
            fancy:fb_textSize="1sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight=".25"
                    android:text="View Report"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:textSize="@dimen/study_btn_font_size" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:src="@drawable/view_report" />
            </LinearLayout>

        </mehdi.sakout.fancybuttons.FancyButton>
    </LinearLayout>

</LinearLayout>









