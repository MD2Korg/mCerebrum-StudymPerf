<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical">
    <!-- studyname & status bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:background="@color/backGroundDark"
        android:weightSum="1"
        android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Study Name: mPerf"
                        android:textColor="#ffff"
                        android:padding="10dp" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textColor="#ffff"
                        android:padding="10dp"
                        android:gravity="right"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                </LinearLayout>


    </LinearLayout>
    <!--  app layout-->

    <!--  data quality bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:background="@color/backGroundDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sensor Data Quality"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffff"/>
    </LinearLayout>

    <!--  data quality layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--Left wrist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">


            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".5"
                android:id="@+id/btn_dq_left_wrist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Left wrist"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_weight=".33"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/data_quality_good"
                        android:layout_weight="0.33"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Good"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_gravity="center"
                        android:layout_weight=".33"/>
                </LinearLayout>

            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>
        <!--Right wrist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".5"
                android:id="@+id/btn_dq_right_wrist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Right wrist"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_weight=".33"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/data_quality_bad"
                        android:layout_weight="0.33"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Poor"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_gravity="center"
                        android:layout_weight=".33"/>
                </LinearLayout>

            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>

    </LinearLayout>
    <!--  data collection and view report layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--data collection button -->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:weightSum="1"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textColor="#fff"
                fancy:fb_textSize="1sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="top|center_horizontal"
                        android:text="Data Collection"
                        android:textColor="#ffff"
                        android:layout_marginTop="15dp"
                        android:textSize="@dimen/study_btn_font_size" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"

                        android:layout_gravity="center"
                        android:text="Resumed after 00:10:00"
                        android:textAlignment="center"
                        android:textColor="@color/headerLemon"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginRight="50dp"
                            android:textColor="#ffffff"
                            android:enabled="true"/>

                    </LinearLayout>

                </LinearLayout>

            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>
        <!--view report button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@id/btn_view_report"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="View Report"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/imageview_viewreport"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.65"
                        android:src="@drawable/view_report"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--fitness button layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@id/btn_fitness"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="Fitness"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/imageviw_fitness"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.65"
                        android:src="@drawable/fitness"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>
        <!--productivity button layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_margin="5dp">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@id/btn_productivity"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="Productivity"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/imageview_productivity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.65"
                        android:src="@drawable/productivity"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

