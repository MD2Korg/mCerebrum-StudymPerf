<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    android:orientation="vertical">
    <!-- studyname & status bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGroundDark"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Study Name: mPerf"
                android:padding="10dp"
                android:textAppearance="@style/CodeFont" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapBrand="success"
                app:roundedCorners="true"
                app:showOutline="true"
                app:bootstrapText="Status:    {fa_check_circle}"
                android:padding="10dp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

        </LinearLayout>


    </LinearLayout>

    <!--  data quality bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginTop="0dp"
        android:background="#00838F"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sensor Data Quality"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffff"/>
    </LinearLayout>

    <!--  data quality layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--Left wrist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_marginRight="2dp">


            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".5"
                android:id="@+id/btn_dq_left_wrist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Left wrist"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_weight=".33"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/data_quality_good"
                        android:layout_weight="0.33"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Good"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_gravity="center"
                        android:layout_weight=".33"/>
                </LinearLayout>

            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>
        <!--Right wrist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_marginLeft="2dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_weight=".5"
                android:id="@+id/btn_dq_right_wrist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fancy:fb_defaultColor="@color/backGroundDark"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Right wrist"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_weight=".33"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/data_quality_bad"
                        android:layout_weight="0.33"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text= "Poor"
                        android:textSize="12sp"
                        android:textColor="#FFFF"
                        android:layout_gravity="center"
                        android:layout_weight=".33"/>
                </LinearLayout>

            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>

    </LinearLayout>
    <!--  data collection and view report layout-->

    <!-- data access bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginTop="5dp"
        android:background="#00838F">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pause and Resume Data Collection"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--data collection button -->
        <!--view report button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGroundDark">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_view_report"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="View Report"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>
                    <com.ohoussein.playpause.PlayPauseView
                        android:id="@+id/play_pause_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        app:fill_color="#e1e1e1"
                        app:pause_bg="#00a2ed"
                        app:play_bg="#001eff" />


                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>

    </LinearLayout>

    <!-- data collection duration bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginTop="5dp"
        android:background="#00838F">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Data Collection Duration"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffff"/>
    </LinearLayout>
    <!-- data collection layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--data collection duration  button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGroundDark">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/data_duration"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="View Report"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>

        </LinearLayout>

    </LinearLayout>
    <!-- app name bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_marginTop="5dp"
        android:background="#00838F">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fitness and Work duration Tracking"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffff"/>
    </LinearLayout>
    <!--  app layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <!--fitness button layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_fitness"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="Step Count"
                        android:textAppearance="@style/ButtonText"
                        android:textAlignment="center" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.65"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/textview_total_step"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:text="3000/"
                            android:textColor="#ff00"
                            android:textSize="20dp"
                            android:textAppearance="@style/ButtonText"

                            android:layout_marginLeft="35dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/textview_step_goal"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:text="6000"
                            android:textSize="12dp"
                            android:textColor="#00FF00"
                            android:textAppearance="@style/ButtonText"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="35dp"/>

                    </LinearLayout>

                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>
        <!--productivity button layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/backGroundDark"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_productivity"
                fancy:fb_defaultColor="@color/backGroundDark"
                fancy:fb_text=""
                fancy:fb_textSize="0sp"
                fancy:fb_textColor="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".35"
                        android:text="Work Duration"
                        android:textSize="@dimen/study_btn_font_size"
                        android:textColor="#ffff"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/imageview_productivity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.65"
                        android:src="@drawable/productivity"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </mehdi.sakout.fancybuttons.FancyButton>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

